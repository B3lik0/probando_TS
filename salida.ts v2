interface Xmen {
  nombre: string;
  poder: string;
}

function enviar(xmen: { nombre: string }) {
  console.log("Enviando a " + xmen.nombre);
}

function cuartel(xmen: { nombre: string }) {
  console.log("Encuartelando a " + xmen.nombre);
}

