//constructores en las clases
class Avenger {
  nombre: string = "";
  equipo: any = undefined;

  constructor(nombre: string, equipo: string) {
    this.nombre = nombre;
    this.equipo = equipo;
  }
}

let antman: Avenger = new Avenger("scot", "delta");

console.log(antman);
