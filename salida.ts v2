type Heroes = {
  name: string;
  edad: number;
  poderes: string[];
  getNombre: () => string;
};

let flash: Heroes = {
  name: "barry",
  edad: 22,
  poderes: ["rapidez", "viajes en el tiempo"],
  getNombre() {
    return this.name;
  },
};

